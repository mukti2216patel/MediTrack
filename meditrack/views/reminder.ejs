<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Equipments - MediTrack</title>
    <!-- Remix Icon CDN -->
    <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
</head>

<body class="w-full min-h-screen bg-gray-100 flex flex-row text-gray-800">
    <% include partials/header %> 

    <div class="w-3/4 min-h-screen p-10">

        <h1 class="text-4xl font-bold text-gray-800 mb-6">Reminders & Alerts</h1>

        <!-- Low Stock Alerts Section -->
        <div id="lowStockAlerts" class="mb-8">
            <% if (lowStockEquipments.length > 0) { %>
                <% lowStockEquipments.forEach(function(equipment) { %>
                    <div class="bg-orange-100 border-l-4 border-orange-500 text-orange-700 p-4 rounded-lg shadow-md mb-3 flex items-center space-x-4">
                        <i class="ri-alert-line text-3xl"></i>
                        <div class="flex-1">
                            <p class="font-bold text-xl">Low Stock Alerts</p>
                            <p class="whitespace-nowrap">Equipment <strong><%= equipment.EquipmentName %> (ID: <%= equipment.EquipmentId %>)</strong> is running low on stock. Only <strong><%= equipment.Quantity %></strong> left!</p>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="text-gray-500">No low stock alerts at the moment.</p>
            <% } %>
        </div>

        <!-- Expired Equipment Section -->
        <div id="expiredEquipments" class="mb-8">
            <% if (expiredEquipments.length > 0) { %>
                <% expiredEquipments.forEach(function(equipment) { %>
                    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 rounded-lg shadow-md mb-4 flex items-center space-x-4">
                        <i class="ri-error-warning-line text-3xl"></i>
                        <div class="flex-1">
                            <p class="font-bold text-xl">Expired Equipment</p>
                            <p class="whitespace-nowrap">Equipment <strong><%= equipment.EquipmentName %> (ID: <%= equipment.EquipmentId %>)</strong> expired on <strong><%= new Date(equipment.DateExpired).toLocaleDateString() %></strong>. Please replace it.</p>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="text-gray-500">No expired equipment alerts at the moment.</p>
            <% } %>
        </div>
    </div>
</body>

</html>
